<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Go" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--General properties-->
  <PropertyGroup>
    <Configuration Condition="'$(Configuration)' == ''">Release</Configuration>
    <ProjectRoot>$(MSBuildProjectDirectory.Substring(0, $(MSBuildProjectDirectory.LastIndexOf('\'))))</ProjectRoot>
    <NuGetExePath>$(ProjectRoot)\.nuget\nuget.exe</NuGetExePath>
    <DropDirectory>$(ProjectRoot)\bin</DropDirectory>
    <NuGetDropDirectory>$(DropDirectory)\NuGet</NuGetDropDirectory>
    <NuGetSymbolsDropDirectory>$(NuGetDropDirectory)\Symbols</NuGetSymbolsDropDirectory>
    <BuildStartDate>$([System.DateTime]::Now.ToString())</BuildStartDate>
  </PropertyGroup>

  <!--Log level properties-->
  <PropertyGroup>
    <!--Log level options: high,normal,low-->
    <LogLevel Condition="'$(LogLevel)' == ''">high</LogLevel>
    <!--NuGet verbosity options: detailed,normal,quiet-->
    <NuGetVerbosity Condition="'$(NuGetVerbosity)' == ''">normal</NuGetVerbosity>
  </PropertyGroup>

  <!--Test properties-->
  <PropertyGroup>
    <RunTests Condition="'$(RunTests)' == ''">true</RunTests>
    <VS110COMNTOOLS Condition="'$(VS110COMNTOOLS)' == ''">C:\Program Files (x86)\Microsoft Visual Studio 11.0\Common7\Tools\</VS110COMNTOOLS>
    <MsTestExePath Condition="'$(MSTestExePath)' == ''">&quot;$(VS110COMNTOOLS.Substring(0, $(VS110COMNTOOLS.IndexOf('\Tools\'))))\IDE\MSTest.exe&quot;</MsTestExePath>
  </PropertyGroup>

  <!--Build version properties-->
  <PropertyGroup>
    <Version Condition="'$(Version)' == ''">$(BUILD_NUMBER)</Version>
    <PackageVersion Condition="'$(PackageVersion)' == ''">$(Version)</PackageVersion>
  </PropertyGroup>

  <!--All solution files under $(ProjectRoot)-->
  <ItemGroup>
    <SolutionFiles Include="$(ProjectRoot)\**\*.sln"/>
  </ItemGroup>

</Project>